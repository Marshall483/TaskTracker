@model EditFieldViewModel


@using (Html.BeginForm("EditField", "Task", FormMethod.Post))
{
    @Html.ValidationSummary(true);
    @Html.Hidden("TaskGuid", Model.TaskGuid);
    @Html.Hidden("FieldGuid", Model.FieldGuid);

    <div class="media text-muted pt-3">
        <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect fill="#007bff" width="100%" height="100%"></rect><text fill="#007bff" dy=".3em" x="50%" y="50%">32x32</text></svg>

        <div class="form-wrap media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <label asp-for="Descrition" class="sr-only">Description</label>

            <div class="d-flex justify-content-between align-items-center w-100">
                <input class="form-control" asp-for="Descrition" type="text" value="@Model.Descrition" placeholder="The task is...">
            </div>

            <button class="btn-success">Apply</button>

            <small><a class="btn" asp-action="DeleteField" asp-controller="Task" 
                      asp-route-fieldGuid="@Model.FieldGuid.ToString()"
                      asp-route-taskGuid="@Model.TaskGuid.ToString()">Delete field</a></small>
        </div>
    </div>
}