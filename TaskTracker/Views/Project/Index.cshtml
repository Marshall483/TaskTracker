@model IEnumerable<Project>


<div class="d-flex align-items-center p-3 my-3 bg-purple rounded shadow-sm">
    <img class="mr-3" src="/IMG/P-PROJECTS.jpg" alt="" width="48" height="48">
    <div class="lh-100">
        <h1 class="mb-0 lh-100">Your projects</h1>
        <small>Since 2021</small>
    </div>
</div>

<div class="my-3 p-3 bg-white rounded shadow-sm">

    

       @if (Model != null && Model.Any())
        {
            <h6 class="border-bottom border-gray pb-2 mb-0">Recent updates</h6>

            foreach (var proj in Model)
            {
                <div class="media text-muted pt-3">
                    <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect fill="#007bff" width="100%" height="100%"></rect><text fill="#007bff" dy=".3em" x="50%" y="50%">32x32</text></svg>
                    <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">

                        <a class="d-block text-gray-dark" asp-action="Project" asp-controller="Project" asp-route-projectGuid="@proj.Id.ToString()">@proj.ProjectName</a>

                        <div class="d-lg-inline-flex">
                            <p class="d-block text-gray-dark">
                                State:

                                @if (ProjectState.Active == proj.State)
                                {<a style="color: green">Active</a> }
                                else if (ProjectState.NotStarted == proj.State)
                                { <a style="color: mediumturquoise">Not started</a>}
                                else
                                { <a style="color: red">Completed</a>}


                            </p>

                            <p class="d-block text-gray-dark" style="margin-left: 10px;">

                                Priority:

                                @if (proj.Priority == 1)
                                {<a style="color: mediumturquoise">Low</a> }
                                else if (proj.Priority == 2)
                                { <a style="color: green">Normal</a>}
                                else
                                { <a style="color: red">High</a>}

                            </p>
                        </div>

                    </div>
                </div>
            }
        }
        else
        {
            <div class="media text-muted pt-3">
                <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect fill="#007bff" width="100%" height="100%"></rect><text fill="#007bff" dy=".3em" x="50%" y="50%">32x32</text></svg>
                <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                    <strong class="d-block text-gray-dark">No projects created actually...</strong>
                </p>
            </div>
        }

    <small class="d-block text-right mt-3">
        <i>Would you like to<a asp-action="CreateProject" asp-route-userGuid="@ViewBag.UserGuid"> create another project?</a></i>
    </small>

</div>
